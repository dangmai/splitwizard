FROM node:5
MAINTAINER Dang Mai <contact@dangmai.net>

COPY . /src
WORKDIR /src
RUN npm run build
EXPORT /src/dist

FROM zzrot/alpine-caddy:latest
MAINTAINER Dang Mai <contact@dangmai.net>

IMPORT /dist
COPY ./tools/docker-start.sh /

RUN mkdir -p /var/www/html \
    && cp -aR /dist/. /var/www/html/ \
    && rm -rf /dist

ENTRYPOINT ["tini"]
CMD /docker-start.sh

EXPOSE 80 443

TAG dangmai/splitwizard:latest
